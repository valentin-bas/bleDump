<Window x:Class="bleBump.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock x:Name="stateLabel" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="Stopped" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="logText" HorizontalAlignment="Left" Height="203" Margin="27,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="449"/>

    </Grid>
</Window>
